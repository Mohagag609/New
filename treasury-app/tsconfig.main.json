{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "outDir": "dist/main",
    /* Aliases */
    "baseUrl": ".",
    "paths": {
      "@/main/*": ["./src/main/*"],
      "@/preload/*": ["./src/preload/*"]
    }
  },
  "include": ["src/main", "src/preload"],
  "exclude": ["node_modules", "dist"]
}
